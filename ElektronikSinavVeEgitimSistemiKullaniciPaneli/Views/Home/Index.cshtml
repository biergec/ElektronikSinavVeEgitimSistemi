@using Microsoft.AspNet.Identity
@{
    ViewData["Title"] = "Home Page";
}

<script src="~/js/My/HomePage.js"></script>

<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="card card-nav-tabs">
                <div class="card-header card-header-warning">
                    <b>Yeni Ders Kaydı</b>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <select asp-items="@((IEnumerable<SelectListItem>) ViewBag.DersListesi)" id="dersListesi" class="form-control">
                            </select>
                        </div>
                        <div class="col-md-7">
                            <input type="text" class="form-control" id="inputDersKayitAnahtari" placeholder="Kayıt anahtarını giriniz...">
                        </div>
                        <div class="col-2">
                            <button type="button" class="btn btn-success" onclick="YeniDersKayit()">Kayıt</button>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="col-md-4">
        @await Component.InvokeAsync("Derslerim", User.Identity.GetUserId());
    </div>
</div>
